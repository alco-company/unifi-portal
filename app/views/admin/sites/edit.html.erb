<% content_for :title, "Editing site" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing site</h1>

  <%= render "form", site: @site %>

  <%= link_to "Show this site", admin_tenant_site_path(@site.tenant, @site), class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to sites", admin_tenant_sites_path(@site.tenant), class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
