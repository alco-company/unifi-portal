<div id="<%= dom_id device %>" class="md:grid md:grid-cols-7 w-full sm:w-auto my-5 gap-2 space-y-5">
  <div class="md:col-span-1">
    <strong class="block font-medium mb-1">Last ap:</strong>
    <%= device.last_ap %>
  </div>
  <div class="md:col-span-1">
    <strong class="block font-medium mb-1">Mac address:</strong>
    <%= device.mac_address %>
  </div>
  <div class="md:col-span-1">
    <strong class="block font-medium mb-1">Site:</strong>
    <%= device.site_id %>
  </div>
  <div class="md:col-span-1">
    <strong class="block font-medium mb-1">Last authenticated at:</strong>
    <%= device.last_authenticated_at %>
  </div>
  <div class="md:col-span-1">
    <strong class="block font-medium mb-1">Last otp:</strong>
    <%= device.last_otp %>
  </div>
  <div class="md:col-span-1">
    <strong class="block font-medium mb-1">Authentication expire at:</strong>
    <%= device.authentication_expire_at %>
  </div>
  <div class="col-span-6 xl:col-span-1 w-full flex flex-col sm:flex-row space-x-2 space-y-2">
    <%#= link_to "Clients", admin_tenant_clients_path(client.tenant), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "Edit", edit_admin_client_device_path(device.client, device), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_tag "Delete", type: "button", data: {

          action: "click->modal#show",
          action_url: admin_client_device_path(device.client, device)
        },
        class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 inline-block font-medium" %>

    <%#= button_to "Destroy", admin_tenant_sites_path(site.tenant, site), method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>

</div>
