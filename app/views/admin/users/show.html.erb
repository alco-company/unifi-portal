<% content_for :title, "Showing user" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl"><%= @user.name %></h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4 my-5">
    <div class="col-span-1">
      <strong class="font-medium">Name:</strong>
      <p><%= @user.name %></p>
    </div>
    <div class="col-span-1">
      <strong class="font-medium">Email:</strong>
      <p><%= @user.email %></p>
    </div>
    <div class="col-span-1">
      <strong class="font-medium">Phone:</strong>
      <p><%= @user.phone %></p>
    </div>
    <div class="col-span-1">
      <strong class="font-medium">Active:</strong>
      <p><%= @user.active? ? "Yes" : "No" %></p>
    </div>
  </div>


  <div class="col-span-6 xl:col-span-1 w-full flex flex-col sm:flex-row space-x-2 space-y-2">
    <%= link_to "Edit", edit_admin_tenant_user_path(@user.tenant, @user), class: "heimdall_button" %>
    <%= button_tag "Delete", type: "button", data: {
          action: "click->modal#show",
          turbo: false,
          action_url: admin_tenant_user_path(@user.tenant, @user)
        },
        class: "heimdall_delete_button" %>

    <%= link_to "Back to users", admin_tenant_users_path(@user.tenant), class: "heimdall_button" %>
  </div>
</div>
