<div class="flex flex-col rounded-sm shadow p-4 bg-white max-w-md mx-auto mt-10">
  <h1 class="text-xl font-bold mb-4">Admin Login</h1>

  <%= form_with url: admin_login_path, method: :post, local: true, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :email, class: "block font-medium" %>
      <%= form.email_field :email, class: "w-full border rounded px-3 py-2 border-1 border-gray-300" %>
    </div>

    <div>
      <%= form.label :password, class: "block font-medium" %>
      <%= form.password_field :password, class: "w-full border rounded px-3 py-2 border-1 border-gray-300" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Login", class: "bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <p class="mt-4 text-red-600 font-semibold"><%= flash[:alert] %></p>
  <% end %>
</div>
