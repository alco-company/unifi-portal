<% content_for :title, "Showing NAS" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">NAS</h1>

  <%= render @nas %>

  <div class="mt-4 space-x-2">
    <%= link_to "Edit", edit_admin_tenant_site_nas_path(@tenant, @site, @nas), class: "inline-block rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
    <%= link_to "Back", admin_tenant_site_nas_index_path(@tenant, @site), class: "inline-block rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
    <%= button_to "Destroy", admin_tenant_site_nas_path(@tenant, @site, @nas), method: :delete, class: "inline-block rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
