<%= form_with(model: client, url: client.persisted? ? admin_tenant_client_path(client.tenant, client) : admin_tenant_clients_path(client.tenant), class: "contents") do |form| %>
  <% if client.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul class="list-disc ml-6">
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :tenant_id %>
    <%= form.text_field :tenant_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": client.errors[:tenant_id].none?, "border-red-400 focus:outline-red-600": client.errors[:tenant_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": client.errors[:name].none?, "border-red-400 focus:outline-red-600": client.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": client.errors[:email].none?, "border-red-400 focus:outline-red-600": client.errors[:email].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": client.errors[:phone].none?, "border-red-400 focus:outline-red-600": client.errors[:phone].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :guest_max %>
    <%= form.number_field :guest_max, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": client.errors[:guest_max].none?, "border-red-400 focus:outline-red-600": client.errors[:guest_max].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :guest_rx %>
    <%= form.number_field :guest_rx, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": client.errors[:guest_rx].none?, "border-red-400 focus:outline-red-600": client.errors[:guest_rx].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :guest_tx %>
    <%= form.number_field :guest_tx, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": client.errors[:guest_tx].none?, "border-red-400 focus:outline-red-600": client.errors[:guest_tx].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :active %>
    <%= form.checkbox :active, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": client.errors[:active].none?, "border-red-400 focus:outline-red-600": client.errors[:active].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
