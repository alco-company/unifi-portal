<%= form_with(model: tenant, url: tenant.persisted? ? admin_tenant_path(tenant) : admin_tenants_path, class: "contents") do |form| %>
  <% if tenant.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(tenant.errors.count, "error") %> prohibited this tenant from being saved:</h2>

      <ul class="list-disc ml-6">
        <% tenant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: true, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tenant.errors[:name].none?, "border-red-400 focus:outline-red-600": tenant.errors[:name].any?}] %>
  </div>
  
  <div class="my-5">
    <%= form.label :url %>
    <%= form.text_field :url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tenant.errors[:url].none?, "border-red-400 focus:outline-red-600": tenant.errors[:url].any?}] %>
  </div>

  <%= render "admin/guest_fields", form: form, resource: tenant %>

  <div class="my-5">
    <%= form.label :note %>
    <%= form.textarea :note, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tenant.errors[:note].none?, "border-red-400 focus:outline-red-600": tenant.errors[:note].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :active %>
    <%= form.checkbox :active, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": tenant.errors[:active].none?, "border-red-400 focus:outline-red-600": tenant.errors[:active].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "heimdall_save_button" %>
  </div>
<% end %>
